{
  "name": "api-gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:docker": "npm run prisma:migrate:auth && npm run start:dev",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate:auth": "prisma generate --schema=prisma/auth-service/schema.prisma",
    "prisma:migrate:auth": "prisma migrate dev --schema=prisma/auth-service/schema.prisma",
    "prisma:deploy:auth": "npx prisma migrate deploy --schema=prisma/auth-service/schema.prisma",
    "prisma:generate:ai-content-service": "prisma generate --schema=prisma/ai-content-service/schema.prisma",
    "prisma:migrate:ai-content-service": "prisma migrate dev --schema=prisma/ai-content-service/schema.prisma",
    "prisma:seed:ai-content-service": "ts-node prisma/ai-content-service/seed.ts",
    "prisma:deploy:ai-content-service": "npx prisma migrate deploy --schema=prisma/ai-content-service/schema.prisma",
    "build:seed": "webpack --config webpack.seed.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
