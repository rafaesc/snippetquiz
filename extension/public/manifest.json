{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "<all_urls>"
  ]
}