{
  "manifest_version": 3,
  "name": "SnippetQuiz",
  "version": "1.0.0",
  "description": "SnippetQuiz turns web content into interactive quizzes.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "cookies"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "*://*.rafaescala.com/",
    "*://*.youtube.com/*"
  ]
}