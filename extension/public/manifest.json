{
  "manifest_version": 3,
  "name": "QuizMaster",
  "version": "1.0.0",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "storage", "scripting", "activeTab", 
    "cookies"],

  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.quizmaster.com/", "*://localhost:*/*"
  ]
}